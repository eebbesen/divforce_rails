<%= form_for(req) do |f| %>
  <% if req.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(req.errors.count, "error") %> prohibited this req from being saved:</h2>

      <ul>
      <% req.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="col col-1 field">
      <%= f.label :title %>
    </div>
    <div class="col">
      <%= f.text_field :title %>
    </div>
  </div>

  <div class="row">
    <div class="col col-1 field">
      <%= f.label :description %>
    </div>
    <div class="col">
      <%= f.text_area :description %>
    </div>
  </div>

  <div class="actions">
    <%= f.submit class: 'btn btn-primary' %>
  </div>

  <%= f.hidden_field :employer_id, value: params[:employer_id] %>
<% end %>
